
<div class="container">

  <h1>All blogs</h1>

  <br>

  <table class="table table-hover">
    <tbody>
      <tr>
        <th>Blog Title</th>
        <th>Post date</th>
      </tr>
      <% @blogs.each do |blog| %>
      <tr>
        <td>
          <%= link_to blog.title, blog_path(blog) %>
        </td>
        <td>
          <%= link_to formatted_date(blog.created_at) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @blogs %>
</div>
